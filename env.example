# Database
DATABASE_URL="file:./tastebase.db"

# BetterAuth
BETTER_AUTH_SECRET="your-super-secret-key-at-least-32-chars-long-change-this-in-production"
BETTER_AUTH_URL="http://localhost:3000"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# File Upload Configuration (Optional)
UPLOADS_ENABLED=true
UPLOAD_STORAGE_PROVIDER=local
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_USER=100
ALLOWED_FILE_TYPES="image/*,application/pdf,text/*"
UPLOAD_PATH_PREFIX="uploads"
LOCAL_UPLOAD_PATH="./uploads"

# S3 Configuration (Optional - only needed if using S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_ENDPOINT=
S3_PRESIGNED_URL_EXPIRY=3600
